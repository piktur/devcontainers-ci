{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./lib",
    "rootDir": "./src",
    "strict": true,
    "lib": [
      "ESNext",
      "DOM",
      "DOM.Iterable"
    ],
    "skipLibCheck": true,
    "useUnknownInCatchVariables": false,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "types": [
      "node"
    ]
  },
  "exclude": ["node_modules", "**/*.test.ts"],
  "references": [
    { "path": "../common"}
  ]
}
